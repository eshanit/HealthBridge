# HealthBridge Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION
# ============================================================================

NUXT_PUBLIC_APP_NAME=HealthBridge
NUXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# API CONFIGURATION (Laravel Backend)
# ============================================================================

# Base URL for the HealthBridge Core API (Laravel backend)
# This is used for CouchDB proxy, AI gateway, and authentication
VITE_API_BASE_URL=http://localhost:8000

# ============================================================================
# AI CONFIGURATION (Local Ollama)
# ============================================================================

# Enable/disable AI features
AI_ENABLED=true

# Ollama server endpoint
OLLAMA_URL=http://127.0.0.1:11434

# Model to use (gemma3:4b recommended)
OLLAMA_MODEL=gemma3:4b

# Rate limit: max requests per minute per IP
AI_RATE_LIMIT=30

# Timeout: max request duration in milliseconds
AI_TIMEOUT=60000

# Auth token for /api/ai middleware (change in production!)
AI_AUTH_TOKEN=local-dev-token

# MedGemma API Key (REQUIRED for Ollama server authentication)
MEDGEMMA_API_KEY=HB-NURSE-001

# ============================================================================
# DATABASE
# ============================================================================

# PouchDB database name
DB_NAME=healthbridge

# ============================================================================
# SECURITY
# ============================================================================

# Session key expiration in milliseconds (24 hours)
SESSION_KEY_EXPIRATION=86400000

# ============================================================================
# SYNC (DEPRECATED - Use VITE_API_BASE_URL instead)
# ============================================================================

# The sync now goes through the Laravel proxy at /api/couchdb
# Set VITE_API_BASE_URL to your Laravel backend URL
# Old direct CouchDB connection is no longer used:
# SYNC_URL=https://your-server.com/db
# SYNC_USER=admin
# SYNC_PASSWORD=password
